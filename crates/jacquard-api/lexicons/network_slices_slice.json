{
  "lexicon": 1,
  "id": "network.slices.slice",
  "description": "Slice application record type",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "name",
          "domain",
          "createdAt"
        ],
        "properties": {
          "createdAt": {
            "type": "string",
            "description": "When the slice was created",
            "format": "datetime"
          },
          "domain": {
            "type": "string",
            "description": "Primary domain namespace for this slice (e.g. social.grain)",
            "maxLength": 256
          },
          "name": {
            "type": "string",
            "description": "Name of the slice",
            "maxLength": 256
          }
        }
      }
    }
  }
}