{
  "lexicon": 1,
  "id": "com.shinolabs.pinksea.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A profile of a PinkSea user.",
      "record": {
        "type": "object",
        "properties": {
          "avatar": {
            "type": "ref",
            "description": "The oekaki image that's the avatar of this profile.",
            "ref": "com.atproto.repo.strongRef"
          },
          "bio": {
            "type": "string",
            "description": "The bio of the user.",
            "maxLength": 2400,
            "maxGraphemes": 240
          },
          "links": {
            "type": "array",
            "description": "The links to outside platforms for this user",
            "items": {
              "type": "ref",
              "ref": "#profileLink"
            },
            "maxLength": 5
          },
          "nickname": {
            "type": "string",
            "description": "The display name of the user.",
            "maxLength": 640,
            "maxGraphemes": 64
          }
        }
      }
    },
    "profileLink": {
      "type": "object",
      "required": [
        "name",
        "link"
      ],
      "properties": {
        "link": {
          "type": "string",
          "description": "The URL of the link.",
          "format": "uri"
        },
        "name": {
          "type": "string",
          "description": "The name of the link.",
          "maxLength": 500,
          "maxGraphemes": 50
        }
      }
    }
  }
}