{
  "lexicon": 1,
  "id": "dev.fudgeu.experimental.atforumv1.forum.announcement",
  "defs": {
    "main": {
      "type": "record",
      "description": "A forum-wide announcement",
      "key": "any",
      "record": {
        "type": "object",
        "required": [
          "title",
          "body",
          "createdAt",
          "expiresAt"
        ],
        "properties": {
          "body": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "expiresAt": {
            "type": "string",
            "format": "datetime"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          }
        }
      }
    }
  }
}