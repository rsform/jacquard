{
  "lexicon": 1,
  "id": "blue.linkat.board",
  "defs": {
    "card": {
      "type": "object",
      "properties": {
        "emoji": {
          "type": "string",
          "description": "Emoji of the card"
        },
        "text": {
          "type": "string",
          "description": "Text of the card"
        },
        "url": {
          "type": "string",
          "description": "URL of the link"
        }
      }
    },
    "main": {
      "type": "record",
      "description": "Record containing a cards of your profile.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": [
          "cards"
        ],
        "properties": {
          "cards": {
            "type": "array",
            "description": "List of cards in the board.",
            "items": {
              "type": "ref",
              "ref": "#card"
            }
          }
        }
      }
    }
  }
}