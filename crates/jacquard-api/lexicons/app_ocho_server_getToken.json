{
  "lexicon": 1,
  "id": "app.ocho.server.getToken",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get a token for a user to authenticate with a service.",
      "parameters": {
        "type": "params",
        "required": [
          "aud"
        ],
        "properties": {
          "aud": {
            "type": "string",
            "description": "The DID of the service that the user will authenticate with",
            "format": "did"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "token"
          ],
          "properties": {
            "token": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}