{
  "lexicon": 1,
  "id": "network.slices.lexicon",
  "description": "Lexicon definition record type for AT Protocol schema storage",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "nsid",
          "definitions",
          "createdAt",
          "slice"
        ],
        "properties": {
          "createdAt": {
            "type": "string",
            "description": "When the lexicon was created",
            "format": "datetime"
          },
          "definitions": {
            "type": "string",
            "description": "The lexicon schema definitions as JSON"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the lexicon",
            "maxLength": 500
          },
          "excludedFromSync": {
            "type": "boolean",
            "description": "Whether this lexicon should be excluded from sync operations",
            "default": false
          },
          "nsid": {
            "type": "string",
            "description": "Namespaced identifier for the lexicon",
            "maxLength": 256
          },
          "slice": {
            "type": "string",
            "description": "AT-URI reference to the slice this lexicon belongs to",
            "format": "at-uri"
          },
          "updatedAt": {
            "type": "string",
            "description": "When the lexicon was last updated",
            "format": "datetime"
          }
        }
      }
    }
  }
}