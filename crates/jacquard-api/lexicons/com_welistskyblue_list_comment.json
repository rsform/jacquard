{
  "lexicon": 1,
  "id": "com.welistskyblue.list.comment",
  "description": "A comment attached to a task item.",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "item",
          "text",
          "createdAt"
        ],
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "deletedAt": {
            "type": "string",
            "format": "datetime"
          },
          "item": {
            "type": "ref",
            "description": "Strong reference to the task item being commented on.",
            "ref": "strong"
          },
          "text": {
            "type": "string",
            "description": "Comment text.",
            "maxLength": 640,
            "maxGraphemes": 64
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}