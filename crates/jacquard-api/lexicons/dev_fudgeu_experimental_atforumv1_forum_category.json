{
  "lexicon": 1,
  "id": "dev.fudgeu.experimental.atforumv1.forum.category",
  "defs": {
    "main": {
      "type": "record",
      "description": "A method of grouping posts into a single 'category'",
      "key": "any",
      "record": {
        "type": "object",
        "required": [
          "name",
          "group",
          "categoryType"
        ],
        "properties": {
          "categoryType": {
            "type": "string",
            "enum": [
              "discussion",
              "question"
            ]
          },
          "description": {
            "type": "string",
            "maxLength": 300
          },
          "group": {
            "type": "string",
            "format": "at-uri"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          }
        }
      }
    }
  }
}