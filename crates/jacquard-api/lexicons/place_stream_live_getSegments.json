{
  "lexicon": 1,
  "id": "place.stream.live.getSegments",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get a list of livestream segments for a user",
      "parameters": {
        "type": "params",
        "required": [
          "userDID"
        ],
        "properties": {
          "before": {
            "type": "string",
            "format": "datetime"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "userDID": {
            "type": "string",
            "description": "The DID of the potentially-following user",
            "format": "did"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "segments": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "place.stream.segment#segmentView"
              }
            }
          }
        }
      }
    }
  }
}