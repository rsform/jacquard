{
  "lexicon": 1,
  "id": "com.shinolabs.pinksea.getOekaki",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets the data about an oekaki post, with its children",
      "parameters": {
        "type": "params",
        "required": [
          "did",
          "rkey"
        ],
        "properties": {
          "did": {
            "type": "string",
            "description": "The DID of the author.",
            "format": "at-identifier"
          },
          "rkey": {
            "type": "string",
            "description": "The record key."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "parent",
            "children"
          ],
          "properties": {
            "children": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "com.shinolabs.pinksea.appViewDefs#hydratedOekaki"
              }
            },
            "parent": {
              "type": "union",
              "refs": [
                "com.shinolabs.pinksea.appViewDefs#hydratedOekaki",
                "com.shinolabs.pinksea.appViewDefs#oekakiTombstone"
              ]
            }
          }
        }
      }
    }
  }
}