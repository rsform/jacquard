{
  "lexicon": 1,
  "id": "sh.tangled.repo.mergeCheck",
  "defs": {
    "conflictInfo": {
      "type": "object",
      "required": [
        "filename",
        "reason"
      ],
      "properties": {
        "filename": {
          "type": "string",
          "description": "Name of the conflicted file"
        },
        "reason": {
          "type": "string",
          "description": "Reason for the conflict"
        }
      }
    },
    "main": {
      "type": "procedure",
      "description": "Check if a merge is possible between two branches",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "did",
            "name",
            "patch",
            "branch"
          ],
          "properties": {
            "branch": {
              "type": "string",
              "description": "Target branch to merge into"
            },
            "did": {
              "type": "string",
              "description": "DID of the repository owner",
              "format": "did"
            },
            "name": {
              "type": "string",
              "description": "Name of the repository"
            },
            "patch": {
              "type": "string",
              "description": "Patch or pull request to check for merge conflicts"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "is_conflicted"
          ],
          "properties": {
            "conflicts": {
              "type": "array",
              "description": "List of files with merge conflicts",
              "items": {
                "type": "ref",
                "ref": "#conflictInfo"
              }
            },
            "error": {
              "type": "string",
              "description": "Error message if check failed"
            },
            "is_conflicted": {
              "type": "boolean",
              "description": "Whether the merge has conflicts"
            },
            "message": {
              "type": "string",
              "description": "Additional message about the merge check"
            }
          }
        }
      }
    }
  }
}