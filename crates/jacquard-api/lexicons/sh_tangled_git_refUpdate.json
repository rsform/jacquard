{
  "lexicon": 1,
  "id": "sh.tangled.git.refUpdate",
  "defs": {
    "commitCountBreakdown": {
      "type": "object",
      "required": [],
      "properties": {
        "byEmail": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "#individualEmailCommitCount"
          }
        }
      }
    },
    "individualEmailCommitCount": {
      "type": "object",
      "required": [
        "email",
        "count"
      ],
      "properties": {
        "count": {
          "type": "integer"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "individualLanguageSize": {
      "type": "object",
      "required": [
        "lang",
        "size"
      ],
      "properties": {
        "lang": {
          "type": "string"
        },
        "size": {
          "type": "integer"
        }
      }
    },
    "langBreakdown": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "#individualLanguageSize"
          }
        }
      }
    },
    "main": {
      "type": "record",
      "description": "An update to a git repository, emitted by knots.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "ref",
          "committerDid",
          "repoDid",
          "repoName",
          "oldSha",
          "newSha",
          "meta"
        ],
        "properties": {
          "committerDid": {
            "type": "string",
            "description": "did of the user that pushed this ref",
            "format": "did"
          },
          "meta": {
            "type": "ref",
            "ref": "#meta"
          },
          "newSha": {
            "type": "string",
            "description": "new SHA of this ref",
            "minLength": 40,
            "maxLength": 40
          },
          "oldSha": {
            "type": "string",
            "description": "old SHA of this ref",
            "minLength": 40,
            "maxLength": 40
          },
          "ref": {
            "type": "string",
            "description": "Ref being updated",
            "maxLength": 2560,
            "maxGraphemes": 256
          },
          "repoDid": {
            "type": "string",
            "description": "did of the owner of the repo",
            "format": "did"
          },
          "repoName": {
            "type": "string",
            "description": "name of the repo"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "isDefaultRef",
        "commitCount"
      ],
      "properties": {
        "commitCount": {
          "type": "ref",
          "ref": "#commitCountBreakdown"
        },
        "isDefaultRef": {
          "type": "boolean",
          "default": false
        },
        "langBreakdown": {
          "type": "ref",
          "ref": "#langBreakdown"
        }
      }
    }
  }
}