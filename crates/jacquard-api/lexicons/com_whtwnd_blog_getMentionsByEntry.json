{
  "lexicon": 1,
  "id": "com.whtwnd.blog.getMentionsByEntry",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get comments associated to designated post.",
      "parameters": {
        "type": "params",
        "required": [
          "postUri"
        ],
        "properties": {
          "postUri": {
            "type": "string",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "mentions"
          ],
          "properties": {
            "mentions": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "at-uri"
              }
            }
          }
        }
      }
    }
  }
}