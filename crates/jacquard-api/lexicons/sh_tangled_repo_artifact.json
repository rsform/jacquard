{
  "lexicon": 1,
  "id": "sh.tangled.repo.artifact",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "name",
          "repo",
          "tag",
          "createdAt",
          "artifact"
        ],
        "properties": {
          "artifact": {
            "type": "blob",
            "description": "the artifact",
            "accept": [
              "*/*"
            ],
            "maxSize": 52428800
          },
          "createdAt": {
            "type": "string",
            "description": "time of creation of this artifact",
            "format": "datetime"
          },
          "name": {
            "type": "string",
            "description": "name of the artifact"
          },
          "repo": {
            "type": "string",
            "description": "repo that this artifact is being uploaded to",
            "format": "at-uri"
          },
          "tag": {
            "type": "bytes",
            "description": "hash of the tag object that this artifact is attached to (only annotated tags are supported)",
            "maxLength": 20,
            "minLength": 20
          }
        }
      }
    }
  }
}