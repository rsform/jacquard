{
  "lexicon": 1,
  "id": "us.polhem.blog.content",
  "description": "Generic blocks of web content for my personal blog (https://polhem.us)",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record describing a page content block.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "content",
          "slug",
          "createdAt"
        ],
        "properties": {
          "content": {
            "type": "string",
            "maxLength": 100000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "us.polhem.blog.image"
            }
          },
          "slug": {
            "type": "string",
            "maxLength": 100
          }
        }
      }
    }
  }
}